{
  "info": {
    "name": "PickBazar API",
    "_postman_id": "pickbazar-api-collection",
    "description": "Postman Collection for PickBazar REST API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "User",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"John Doe\",\n    \"email\": \"john@example.com\",\n    \"password\": \"password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/register",
              "host": ["{{base_url}}"],
              "path": ["register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"john@example.com\",\n    \"password\": \"password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/token",
              "host": ["{{base_url}}"],
              "path": ["token"]
            }
          }
        },
        {
          "name": "Forget Password",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{ \"email\": \"john@example.com\" }"},
            "url": {"raw": "{{base_url}}/forget-password", "host": ["{{base_url}}"], "path": ["forget-password"]}
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "List Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {"raw": "{{base_url}}/products", "host": ["{{base_url}}"], "path": ["products"]}
          }
        },
        {
          "name": "Product Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {"raw": "{{base_url}}/products/:id", "host": ["{{base_url}}"], "path": ["products", ":id"]}
          }
        },
        {
          "name": "Import Products",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{ \"file\": \"products.csv\" }"},
            "url": {"raw": "{{base_url}}/import-products", "host": ["{{base_url}}"], "path": ["import-products"]}
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}, {"key": "Authorization", "value": "Bearer {{token}}"}],
            "body": {"mode": "raw", "raw": "{ \"products\": [{\"id\":1,\"quantity\":2}], \"shipping_address_id\":1 }"},
            "url": {"raw": "{{base_url}}/orders", "host": ["{{base_url}}"], "path": ["orders"]}
          }
        },
        {
          "name": "List My Orders",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "{{base_url}}/orders", "host": ["{{base_url}}"], "path": ["orders"]}
          }
        }
      ]
    },
    {
      "name": "Webhooks",
      "item": [
        {
          "name": "Stripe Webhook",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{ }"},
            "url": {"raw": "{{base_url}}/webhooks/stripe", "host": ["{{base_url}}"], "path": ["webhooks", "stripe"]}
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}
